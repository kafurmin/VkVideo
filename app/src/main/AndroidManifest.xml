<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kif.vkvideo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.kif.vkvideo.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_ab_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.kif.vkvideo.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kif.vkvideo.ui.main.MainActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.kif.vkvideo.ui.videoplayer.VideoPlayerActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>